{% block create %}
    <turbo-stream action="prepend" target="chuckles">
        <template>
            {{ include('chuckle/show.html.twig', { chuckle: entity }) }}
        </template>
    </turbo-stream>
{% endblock %}

{% block update %}
    <turbo-stream action="replace" target="chuckle-{{ id }}">
        <template>
            {{ include('chuckle/show.html.twig', { chuckle: entity }) }}
        </template>
    </turbo-stream>
{% endblock %}

{% block remove %}
    <turbo-stream action="remove" target="chuckle-{{ id }}"></turbo-stream>
{% endblock %}
